<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chunyang.demobackend.dao.UserMapper">

    <insert id="insertUser" parameterType="com.chunyang.demobackend.entity.UserEntity">
        INSERT INTO user (name, email, password)
        VALUES (#{name}, #{email}, #{password})
    </insert>

    <delete id="deleteUserById" parameterType="Integer">
        DELETE FROM user WHERE id = #{id}
    </delete>

    <update id="updateUser" parameterType="com.chunyang.demobackend.entity.UserEntity">
        UPDATE user SET name = #{name},
                        email = #{email}, 
                        password= #{passwordDigest},
        WHERE id = #{id}
    </update>

    <select id="getUserById" parameterType="Integer" resultType="com.chunyang.demobackend.entity.UserEntity">
        SELECT id, name, email FROM user WHERE id = #{id}
    </select>

    <select id="getUserByName" parameterType="String" resultType="com.chunyang.demobackend.entity.UserEntity">
        SELECT * FROM user WHERE name = #{name}
    </select>

    <select id="getUserByEmail" parameterType="String" resultType="com.chunyang.demobackend.entity.UserEntity">
        SELECT * FROM user WHERE email = #{email}
    </select>

    <select id="getAllUsers" resultType="com.chunyang.demobackend.entity.UserEntity">
        SELECT * FROM user
    </select>
</mapper>
